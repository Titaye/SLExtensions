            <StackPanel HorizontalAlignment="Center" Width="Auto" Grid.Column="3" Grid.Row="1" MaxWidth="200">
                <TextBlock Text="Links" TextWrapping="Wrap" Style="{StaticResource TextBlockStyleHeader}"/>
                <ItemsControl ItemsSource="{Binding Path=Links, Source={StaticResource controller}}" Height="Auto" Width="Auto" VerticalContentAlignment="Top">

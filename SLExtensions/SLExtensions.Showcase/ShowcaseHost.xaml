            <HyperlinkButton Height="63" HorizontalAlignment="Left" Margin="28,0,0,20" VerticalAlignment="Bottom" Width="240" Content="Download SLExtensions" Style="{StaticResource downloadButtonStyle}" NavigateUri="http://www.codeplex.com/SLExtensions/Release/ProjectReleases.aspx#ReleaseFiles"/>
        </Grid>
        <Grid Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="Auto" Grid.Row="1" Grid.ColumnSpan="2" MinHeight="120" Background="#FF002339">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>

            <Border CornerRadius="10,10,10,10" Padding="2,2,2,2" Margin="298,157,25,20">
                <Border.Background>
                    <LinearGradientBrush EndPoint="99,77.004" StartPoint="99,0" MappingMode="Absolute">
                        <GradientStop Color="#50FFFFFF"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border CornerRadius="8,8,8,8" Padding="4,4,4,4" >
                    <Border.Background>
                        <LinearGradientBrush EndPoint="97,56.99" StartPoint="97,0" MappingMode="Absolute">
                            <GradientStop Color="#00FFFFFF" Offset="0.17"/>
                            <GradientStop Color="#D0FFFFFF" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border Height="Auto" Width="Auto" Background="#65FFFFFF">

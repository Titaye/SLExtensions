        <Grid Background="#FF000000">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Rectangle Height="Auto" Margin="0,208,0,0" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Stroke="{x:Null}">

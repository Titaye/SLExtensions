<UserControl x:Class="SLExtensions.Showcase.PageColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:sle="clr-namespace:SLExtensions.Controls;assembly=SLExtensions.Controls"
    xmlns:local="clr-namespace:SLExtensions.Showcase;assembly=SLExtensions.Showcase">
    <Grid x:Name="LayoutRoot">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <sle:ColorPicker x:Name="ColorPicker1" SelectedColor="#FF00FF00" SelectedColorChanging="ColorPicker1_SelectedColorChanging" SelectedColorChanged="ColorPicker1_SelectedColorChanged" />
            <TextBlock x:Name="tbCurrColor" Foreground="Black" Margin="0,8,0,4"></TextBlock>
            <TextBlock x:Name="tbCurrColor1" Foreground="Black" Margin="0,8,0,4" Width="500" ></TextBlock>
            <Button Content="Select Random Color" Margin="4" HorizontalAlignment="Center" Click="Button_Click" />
            <sle:ColorPicker x:Name="ColorPicker2" Margin="20" Height="150" Width="150" SelectedColor="Purple" />
        </StackPanel>
    </Grid>
</UserControl>
